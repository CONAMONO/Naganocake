<div class="cover">
	<div class="container">
		<div class="row">
			<%= render "layouts/genre_bar", genres: @genres %>
			<div class="col-xs-9">
				<h3 class="products-name" style="text-align: center;"><%= @genre.name %>  <span style="font-size: small;">(全<%=  @products.count %>件)</span>
				</h3>
				<div class="row produt-box">
					<% @products.each do |products| %>
						<% if products.genre.status == true %>
							<% if products.sale_status == true %>
								<div class="col-md-3">
									<div>
										<%= link_to public_product_path(products.id) do %>
										<%= attachment_image_tag products, :image, size: "150x150" %>
										<% end %>
										<p><%= link_to products.name, public_product_path(products.id) %></p>
										<p><%= products.non_taxed_price %>円(税抜き)</p>
									</div>
								</div>
							<% end %>
						<% end %>
					<% end %>
		<div class="row">
			<div class="col-xs-12 col-xs-offset-6">
				<%= paginate @products %>
			</div>
		</div>
	</div>
</div>
<div class="cover">
	<div class= "container-fluid">
		<div class = "row">
			<div class = "col-xs-1"></div>
			<div class = "col-xs-11">
				<h2>注文履歴詳細</h2>
			</div>
		</div>
		<div class = "row">
			<div class = "col-xs-1"></div>
			<div class = "col-xs-5">
				<table class ="table table-bordered">
					<h4>注文情報</h4>
					<tbody>
						<tr>
							<th style="width:20%">注文日</th>
							<td style="width:80%"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
						</tr>
						<tr>
							<th>配送先</th>
							<td><%= "〒" + @order.postal_code %><br><%= @order.street_address %><br><%= @order.name_address %></td>
						</tr>
						<tr>
							<th>支払い方法</th>
							<td><%= @order.payment_method %></td>
						</tr>
						<tr>
							<th>ステータス</th>
							<td><%= @order.order_status %></td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class = "col-xs-3"><table class ="table table-bordered">
					<h4>請求情報</h4>
					<tbody>
						<tr>
							<th >合計金額</th>
							<td><%= @order.total_price %></td>
						</tr>
						<tr>
							<th >配送料</th>
							<td><%= @order.pay %></td>
						</tr>
						<tr>
							<th >ご請求</th>
							<td><%= @order.total_price + @order.pay %></td>
						</tr>
					</tbody>
				</table></div>
		</div>
		<div class = "row">
			<div class = "col-xs-1"></div>
			<div class = "col-xs-7">
				<table class ="table table-bordered">
					<h4>注文内容</h4>
					<thead>
						<tr >
							<th style="width:60%">商品</th>
							<th style="width:20%">単価（税込）</th>
							<th style="width:10%">個数</th>
							<th style="width:10%">小計</th>
						</tr>
					</thead>
					<tbody>
						<% @order_products.each do |order_product| %>
						<tr>
							<td><%= order_product.product.name %></td>
							<td><%= order_product.taxed_price %></td>
							<td><%= order_product.product_count %></td>
							<td><%= order_product.taxed_price *  order_product.product_count %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class = "col-xs-4"></div>
		</div>
	</div>
</div>
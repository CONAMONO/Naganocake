<container>
	<div class="row">
		<%= render "layouts/genre_bar", genres: @genres %>
		<div class="col-md-9">
			<h3>商品 <h5> (全<%= @products_count %>件) </h5></h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<table>
				<thead>
					<% @products.each do |products| %>
					<tr>
						<th>
							<%= link_to public_product_path(products.id) do %>
								<%= attachment_image_tag products, :image, size: "200x200" %>
							<% end %>
						</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= link_to products.name, public_product_path(products.id) %>
						</td>
					</tr>
					<tr>
						<td>¥<%= products.non_taxed_price %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</container>
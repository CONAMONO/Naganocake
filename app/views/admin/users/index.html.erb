<div class= "container-fluid">
	<div class = "row">
		<div class ="col-xs-2"></div>
			<div class ="col-xs-8">
				<h2>会員一覧画面</h2>
				<table class ="table">
					<thead>
						<tr class = "active">
							<th>会員ID</th>
							<th>氏名</th>
							<th>メールアドレス</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td><%= user.id %></td>
							<td><%= link_to user.first_name + user.last_name, admin_user_path(user.id) %></td>
							<td><%= user.email %></td>
							<td><% if user.user_status == false %>
								<span>有効</span>
								<% else %>
								<span>退会済</span>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
				<div  class = "text-center">
					<%= paginate @users %>
				</div>
			</div>
		<div class ="col-xs-2"></div>
	</div>
</div>
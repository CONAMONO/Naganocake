<div class= "container-fluid">
	<div class ="row">
		<div class ="col-xs-3">
			<div class ="text-right">
				<h2>会員詳細画面</h2>
			</div>
		</div>
		<div class ="col-xs-9"></div>
	</div>
	<div class = "row">
		<div class ="col-xs-2"></div>
			<div class ="col-xs-4">
				<p>顧客ID<%= @user.id %>
					<% if @user.user_status == false %>
					<span class="label label-info">有効会員</span>
					<% else %>
					<span class="label label-info">退会会員</span>
					<% end %>
				</p>
				<p>氏名<%= @user.first_name %><%= @user.last_name %></p>
				<p>フリガナ<%= @user.first_name_kata %><%= @user.last_name_kata %></p>
				<p>郵便番号<%= @user.postal_code %></p>
				<p>住所<%= @user.street_address %></p>
				<p>電話番号<%= @user.phone_number %></p>
				<p>メールアドレス<%= @user.email %></p>
		    	<%= link_to edit_admin_user_path(@user.id) do %>
		    	<div type="button" class="btn btn-primary">編集する</div>
		    	<% end %>
		    	<%= link_to admin_order_path do %>
		    		<div type="button" class="btn btn-primary">注文履歴一覧を見る</div>
		    	<% end %>
			</div>
		<div class ="col-xs-6"></div>
	</div>
</div>


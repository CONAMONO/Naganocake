<section>
	<h2>ジャンル編集画面</h2>
</section>
<%= form_for @genre, url:admin_genre_path do |f| %>
	<label>ジャンル</label>
	<%= f.text_field :name %>
	<%= f.radio_button :status, :true %>
		<%= f.label :status, "有効" %>
	<%= f.radio_button :status, :false %>
		<%= f.label :status, "無効" %>
	<%= f.submit "変更を保存する" %>
<% end %>
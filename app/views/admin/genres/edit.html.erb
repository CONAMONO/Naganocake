<div class="container">
	<div class="row" style="margin:20px 0px 20px">
		<section>
			<h2>ジャンル編集画面</h2>
		</section>
	</div>
	<div class="row" style="margin:20px 0px 20px">
		<%= form_for @genre, url:admin_genre_path do |f| %>
			<label>ジャンル</label>
			<%= f.text_field :name %>
			<%= f.radio_button :status, :true %>
				<%= f.label :status_true, "有効" %>
			<%= f.radio_button :status, :false %>
				<%= f.label :status_false, "無効" %>
			<%= f.submit "変更を保存する", class: "btn btn-primary btn-sm" %>
		<% end %>
	</div>
</div>
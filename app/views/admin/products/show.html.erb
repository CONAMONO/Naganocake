<div class="container">
	<div class=row>
		<section>
			<h2>商品 詳細画面</h2>
		</section>
	</div>
	<div class="row">
		<% @tax = 1.1 %>
		<div class="col-sm-3">
			<%= attachment_image_tag @product, :image, :fill,200,200 %><br />
		</div>
		<div class="col-sm-6">
			<label>商品名</label>
				<%= @product.name %><br />
			<label>商品説明</label>
				<%= @product.explain %><br />
			<label>ジャンル</label>
				<%= @product.genre.name %><br />
			<label>税込価格(税抜価格)</label>
				<%= number_with_delimiter((@product.non_taxed_price*@tax).floor) %>(<%= number_with_delimiter@product.non_taxed_price %>)円<br />
			<label>販売ステータス</label>
				<% if @product.sale_status == true %>
					販売中
				<% else %>
					売切れ
				<% end %><br />
			<%= link_to "編集する", edit_admin_product_path(@product.id), class: "btn btn-default" %>
		</div>
	</div>
</div>
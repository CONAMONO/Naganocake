<section>
	<h2>商品　新規登録画面</h2>
</section>
<%= form_for [:admin, @product] do |f| %>
	<%= f.attachment_field :image, fallback: "app/assets/images/no_image.jpg"%>
	<label>商品名</label>
		<%= f.text_field :name %><br />
	<label>商品説明</label>
		<%= f.text_field :explain %><br />
	<label>ジャンル</label>
		<%= f.collection_select :genre, Genre.all, :id, :name ,include_blank: "選択してください"%><br />
	<label>税抜価格</label>
		<%= f.text_field :non_taxed_price %> 円<br />
	<label>販売ステータス</label>
		<%= f.select :sale_status,[["販売中","true"],["売切れ","false"]],include_blank: "選択してください" %><br />
	<%= f.submit "新規登録" %>
<% end %>

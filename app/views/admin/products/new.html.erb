<section>
	<h2>商品　新規登録画面</h2>
</section>
<%= form_for [:admin, @product] do |f| %>
	<%= f.attachment_field :image, fallback:"no_image.jpg"%>
	<label>商品名</label>
		<%= f.text_field :name %><br />
	<label>商品説明</label>
		<%= f.text_field :explain %><br />
	<label>ジャンル</label>
		<%= f.collection_select :genre_id, Genre.all, :id, :name %><br />
	<label>税抜価格</label>
		<%= f.text_field :non_taxed_price %> 円<br />
	<label>販売ステータス</label>
		<%= f.select :sale_status,[["販売中","true"],["売切れ","false"]] %><br />
	<%= f.submit "新規登録", class: "btn btn-default" %>
<% end %>

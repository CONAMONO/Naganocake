<div class="cover">
<div class="container">
		<div class="row" style="display:flex; padding:20px 60px 0px 20px;">
			<section style="width:90%">
				<h2>商品一覧画面</h2>
			</section>
				<span class="pull-right" style="margin:25px 0px">
					<%= link_to "",new_admin_product_path, class:"btn btn-default glyphicon glyphicon-plus" %>
				</span>
		</div>
	<div class="row" style="padding:20px">
		<table class="table" style="width:90%;">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<% if @search_product %>
			  <tbody>
				<% @search_product.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td>
							<%= link_to admin_product_path(product.id) do %>
								<%= product.name %>
							<% end %>
							</td>
						<td><%= number_with_delimiter(product.non_taxed_price) %>円	</td>
						<td><%= product.genre.name %></td>
						<td><% if product.sale_status == true %>
								販売中
							<% else %>
								売切れ
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
			<%= paginate @search_product %>
			<% else %>
			<tbody>
				<% @products.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td>
							<%= link_to admin_product_path(product.id) do %>
								<%= product.name %>
							<% end %>
							</td>
						<td><%= number_with_delimiter(product.non_taxed_price) %>円	</td>
						<td><%= product.genre.name %></td>
						<td><% if product.sale_status == true %>
								販売中
							<% else %>
								売切れ
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
			<% end %>
		</table>
		<div class = "text-center">
			<% if @search_product %>
				<%= paginate @search_product %>
			<% else %>
				<%= paginate @products %>
			<% end %>
		<div>
	</div>
</div>
</div>

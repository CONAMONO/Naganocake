<div class="container">
		<div class=row visible-sm-inline-block>
			<section>
				<h2>商品一覧画面</h2>
			</section>
			<%= link_to "",new_admin_product_path, class:"btn btn-default glyphicon glyphicon-plus" %>
		</div>
	<div class="row">
		<table class="table table-striped">
			<thead class="table-bordered">
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @product.each do |product| %>
					<tr>
						<td><%= product.id %></td>
						<td>
							<%= link_to admin_product_path(product.id) do %>
								<%= product.name %>
							<% end %>
							</td>
						<td><%= number_with_delimiter(product.non_taxed_price) %>円</td>
						<td><%= product.genre.name %></td>
						<td><% if product.sale_status == true %>
								販売中
							<% else %>
								売切れ
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
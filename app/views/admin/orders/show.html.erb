<div class= "container-fluid">
	<div class ="row">
		<div class ="col-xs-3">
			<div class ="text-right">
				<h2>注文詳細画面</h2>
			</div>
		</div>
		<div class ="col-xs-9"></div>
	</div>
	<div class = "row">
		<div class ="col-xs-8">
			<%= form_for(@order, url:admin_order_path(@order.id)) do |f| %>
			<div>
				<%= link_to admin_user_path do %>
				<strong>購入者<%= @order.name_address %></strong>
				<% end %>
			</div>
			<div>
				<strong>配送先<%= @order.street_address %></strong>
			</div>
			<div>
				<strong>支払い方法<%= @order.payment_method %></strong>
			</div>
				<div>
				<strong>注文ステータス<%= f.select :order_status, ['入金待ち', '入金確認', '製作中', '発送準備中', '発送済み'] %></strong>
				<%= f.submit "更新", class: "btn btn-primary" %>
			</div>
			<% end %>
			<table class ="table">
				<thead>
					<tr class = "active">
						<th>商品名</th>
						<th>単価（税込み）</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @order_products.each do |order_product| %>
					<%= form_for(order_product, url:admin_path(order_product.id)) do |f| %>
					<tr>
						<td><%= order_product.product.name %></td>
						<td><%= order_product.taxed_price %></td>
						<td><%= order_product.product_count %></td>
						<td><%= order_product.taxed_price %></td>
						<td><%= f.select :production_status, ['着手不可', '製作待ち', '製作中', '製作完了'] %><%= f.submit "更新", class: "btn btn-primary" %></td>
					</tr>
					<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class ="col-xs-4">
			<div>
				<strong>合計料金<%= @order.total_price %>円</strong>
			</div>
			<div>
				<strong>送料<%= @order.pay%>円</strong>
			</div>
			<div>
				<strong>送金金額合計<%= @order.pay + @order.total_price %>円</strong>
			</div>
		</div>
	</div>
</div>
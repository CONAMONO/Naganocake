<container>
    <strong>会員の方はこちらからログイン</strong>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "パスワード" %>
      </div>

      <div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "=> パスワードを忘れた方はこちら", new_password_path(resource_name) %><br/>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <div>
      <strong>登録がお済みでない方</strong>
    </div>
    <%= render "users/shared/links" %>


</container>
